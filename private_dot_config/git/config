[core]
	excludesfile = /home/darkroom/.config/git/gitignore
[init]
	defaultBranch = main
[merge]
	tool = diffview
[fetch]
	prune = true
[pull]
	rebase = true
[color]
	branch = auto
	diff = auto
	status = auto
	ui = auto
[color "branch"]
	current = green bold
	local = blue
	remote = magenta
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = blue bold
	branch = magenta bold
[mergetool]
	keepBackup = false
[mergetool "fugitive"]
	cmd = nvim -f -c \"Gvdiffsplit!\" \"$MERGED\"
[mergetool "diffview"]
	cmd = nvim -c \"DiffviewOpen\" \"$MERGED\"
