## Aliases
alias zshreload='source ~/.config/zsh/.zshrc'

#alias ls='ls --color=auto'
alias ls='exa --icons --group-directories-first --group'
alias lstree='ls -RT'
alias cat='bat --paging=never --theme=base16'
alias less='bat --wrap=never --theme=base16'
alias grep='grep --color=auto'

alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

alias vim='nvim'

alias yeet='yay -Rcs'

# Python venv aliases
function activate_venv() {
    venv_names=(.venv venv .env env)

    for name in "${venv_names[@]}"; do
        if [[ -d "$name/bin" && -f "$name/bin/activate" ]]; then
            echo "Activating virtual environment: $name"
            source "$name/bin/activate"
            return
        fi
    done

    echo "No virtual environment found in common locations."
}

alias venv-auto="python -m venv .venv && source .venv/bin/activate && pip install --upgrade pip && pip install -r requirements.txt"
alias venv-in="activate_venv"
alias venv-out="deactivate"

